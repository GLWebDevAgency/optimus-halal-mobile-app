{
  "name": "optimus-halal-backend",
  "version": "1.0.0",
  "description": "Mobile BFF for Optimus Halal â€” Hono + tRPC + Drizzle",
  "type": "module",
  "scripts": {
    "dev": "tsx --env-file=.env watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "tsc && drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx --env-file=.env src/db/seeds/run.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.0",
    "@hono/trpc-server": "^0.3.0",
    "@trpc/server": "^11.0.0",
    "argon2": "^0.41.0",
    "drizzle-orm": "^0.44.0",
    "hono": "^4.7.0",
    "ioredis": "^5.6.0",
    "jose": "^6.0.0",
    "pg": "^8.14.0",
    "postgres": "^3.4.0",
    "superjson": "^2.2.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.0",
    "drizzle-kit": "^0.31.0",
    "tsc-alias": "^1.8.0",
    "tsx": "^4.19.0",
    "typescript": "^5.9.0",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "argon2",
      "esbuild"
    ]
  }
}
